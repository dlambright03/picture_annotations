# =============================================================================
# ADA Annotator Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# AI Service Configuration (Choose ONE of the following options)
# =============================================================================

# -----------------------------------------------------------------------------
# Option 1: Azure OpenAI Service (Recommended for Production)
# -----------------------------------------------------------------------------
# Get these from Azure Portal > Azure OpenAI resource
AI_SERVICE_TYPE=azure_openai

# Azure OpenAI Endpoint (e.g., https://your-resource.openai.azure.com/)
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint-here

# Azure OpenAI API Key
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here

# Deployment name for your vision-capable model (e.g., gpt-4o, gpt-4-vision)
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name-here

# API Version (usually 2024-02-15-preview or later for vision)
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# -----------------------------------------------------------------------------
# Option 2: OpenAI API (Easier for Development)
# -----------------------------------------------------------------------------
# AI_SERVICE_TYPE=openai
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4o  # or gpt-4-vision-preview

# =============================================================================
# Application Settings
# =============================================================================

# Application Environment (development, staging, production)
ENVIRONMENT=development

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum file upload size in MB (default: 50)
MAX_UPLOAD_SIZE_MB=50

# Maximum number of images to process per document (default: 100)
MAX_IMAGES_PER_DOCUMENT=100

# Temporary file storage directory (default: ./temp)
TEMP_DIR=./temp

# =============================================================================
# Alt-Text Generation Settings
# =============================================================================

# AI Model temperature (0.0-1.0, lower = more deterministic)
AI_TEMPERATURE=0.3

# Maximum tokens for alt-text generation
AI_MAX_TOKENS=500

# Timeout for AI API calls in seconds
AI_TIMEOUT_SECONDS=30

# Maximum alt-text length (characters)
MAX_ALT_TEXT_LENGTH=250

# Preferred alt-text length (characters)
PREFERRED_ALT_TEXT_LENGTH=150

# =============================================================================
# Optional: OCR Service (for text extraction from images)
# =============================================================================

# OCR_SERVICE_TYPE=azure  # or tesseract
# AZURE_COMPUTER_VISION_ENDPOINT=your-endpoint-here
# AZURE_COMPUTER_VISION_KEY=your-key-here

# =============================================================================
# Streamlit Configuration (for UI)
# =============================================================================

# Streamlit server port (default: 8501)
STREAMLIT_SERVER_PORT=8501

# Streamlit server address (default: localhost)
STREAMLIT_SERVER_ADDRESS=localhost

# Enable Streamlit file watcher for auto-reload (default: true)
STREAMLIT_SERVER_FILE_WATCHER_TYPE=auto

# =============================================================================
# Development & Testing
# =============================================================================

# Enable debug mode (shows detailed error messages)
DEBUG_MODE=true

# Mock AI responses (for testing without API calls)
MOCK_AI_RESPONSES=false

# Sample alt-text for mock mode
MOCK_ALT_TEXT="Sample alt text for testing purposes"

# =============================================================================
# Security
# =============================================================================

# Secret key for session management (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# SECRET_KEY=your-secret-key-here

# Enable HTTPS redirect (for production deployment)
# FORCE_HTTPS=false

# =============================================================================
# Monitoring & Analytics (Optional)
# =============================================================================

# Application Insights connection string (Azure)
# APPLICATIONINSIGHTS_CONNECTION_STRING=your-connection-string-here

# Enable usage analytics
# ENABLE_ANALYTICS=false
